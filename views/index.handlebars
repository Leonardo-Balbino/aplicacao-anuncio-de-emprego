<div id="top-container" class="container-fluid">
        
        <h1 id="main-title" class="text-center">Encontre a sua oportunidade</h1>
        <p id="main-subtitle" class="text-center">Conectamos estudantes a oportunidades</p>

        <form id="search-form" class="form-inline" action="/" method="GET">
                <div class="row">
                    <div class="form-group col-md-10">   
                        <input class="form-control" type="text" name="job" id="job" placeholder="Pesquisar a vaga">
                    </div>
                    <div class="col-md-2">
                           <button type="submit"id ="search-button" class="btn btn-primary">Pesquisar</button>
                           
                    </div>
                </div>
        </form>
        
    </div>
    <br>
    <main>
        <div id="jobs-container" class="container">
            <div class="row">
                <div class="col-md-12">
                    {{#if search}}
                        <h2 class="job-list-title text-center">
                            Buscando vagas que contem: {{search}}
                        </h2>
                    {{else}}
                        <h2 class="job-list-title text-center">
                            Veja as vagas em destaque do mÃªs
                        </h2>
                    {{/if}}
                    <hr>

                    <div id="job-list" class="list-group">
                        {{#each jobs}}
                        <br>
                        <div class="card">
                            <div class="list-group-item{{#if dataValues.new_job}}new-job{{/if}}">
                                <img src="/img/empresas.jpg" class="card-img-top" >
                                <div class="card-body">
                                    <h5 class="main-color">{{dataValues.title}}</h5>
                                    <p class="card-text">{{dataValues.company}}</p>
                                    <p>R$ {{dataValues.salary}}</p>
                                    <span class=" badge rounded-pill bg-success text-white new-job new-job-label">{{#if dataValues.new_job}}Nova{{/if}}</span>
                                
                                </div>
                                <div class="card-footer">
                                    <div class="d-grid gap-2 col-6 mx-auto">
                                       <a href="/jobs/view/{{dataValues.id}}" class="btn btn-success">Ver vaga</a>
                                    </div>
                                
                                    
                                </div>
                            </div>
                            
                            <br>
                        </div>
                        {{/each}}
                        
                        
                    </div>



                    


